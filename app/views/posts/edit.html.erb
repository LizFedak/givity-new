<% if @post.errors.present? %>
  <div class="alert alert danger">
    <% @post.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  </div>
<% end %>


<div class="col-md-6">
  <%= form_with(model: @post, class: 'form form-horizontal', local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :body %>
      <%= form.rich_text_area :body %>
    </div>

    <div class="form-group">
      <%= form.submit @post.persisted? ? "Update" : "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>